<Window x:Class="WpfTeam05.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeam05"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <DockPanel>
        <!--MenuBar-->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Student"/>
                <MenuItem Header="Sql Window" Click="MenuItem_Click"/>
                <MenuItem Header="Close"/>
            </MenuItem>
        </Menu>
        
        <!--StatusBar-->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBlock Text="Status: Unknown"/>
        </StackPanel>
        
        <!--Window Content-->
        <ListBox x:Name="ListStudents" DockPanel.Dock="Left"/>
    </DockPanel>
</Window>
